<!-- Latest Comment -->
<div class="col-md-6">
    <div id="testimonials-3" class="carousel slide testimonials testimonials-v1 testimonials-bg-dark">
        <div class="carousel-inner">
            {% for post in last_post_list %}
                {% if loop.first == true %}
                    <div class="item active">
                {% else %}
                    <div class="item">
                {% endif %}

                        <p class="rounded-2x">
                            <a class='comment' href='{{ path('herzult_forum_topic_show', {'timestamp' : post.t_createdAt|date('U'), 'categorySlug' : post.cat_slug, 'slug' : post.t_slug } )}}'>
                                {{ post.message | striptags | truncate(160) | raw }}
                            </a>
                        </p>
                        
                        <div class="testimonial-info">
                            <img class="rounded-2x" src="{{ asset('/assets/img/testimonials/user.jpg') }}" alt="">
                            <span class="testimonial-author">
                                    {% if post.u_username is not empty %}
                                        {{ post.u_username }}
                                    {% else %}
                                        Anonyme
                                    {% endif %}

                                <em>Le {{ post.createdAt|date('d/m/Y H:i') }}</em>
                            </span>
                        </div>
                    </div>
            {% endfor %}
        </div>

        <div class="carousel-arrow">
            <a class="left carousel-control" href="#testimonials-3" data-slide="prev">
                <i class="fa fa-angle-left rounded-x"></i>
            </a>
            <a class="right carousel-control" href="#testimonials-3" data-slide="next">
                <i class="fa fa-angle-right rounded-x"></i>
            </a>
        </div>                    
    </div>
</div>
<!-- End Latest Comment -->

