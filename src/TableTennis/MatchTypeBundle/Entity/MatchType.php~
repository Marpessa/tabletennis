<?php

namespace TableTennis\MatchTypeBundle\Entity;

use Gedmo\Mapping\Annotation as Gedmo;
use Doctrine\ORM\Mapping as ORM;
use Symfony\Component\Validator\Constraints as Assert;

/**
 * @ORM\Entity
 * @ORM\Table(name="match_type")
 */
class MatchType {

    /**
     * @ORM\Id
     * @ORM\Column(type="integer", nullable=false)
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;

    /**
     * @ORM\Column(type="string", length=64)
     * @Assert\NotBlank
     * @Assert\Length(
     *      min = "3",
     *      max = "255",
     *      minMessage = "Votre nom doit faire au moins {{ limit }} caractÃ¨res",
     *      maxMessage = "Votre nom ne peut pas Ãªtre plus long que {{ limit }} caractÃ¨res"
     * )
     */
    public $title;

    /**
     * @ORM\Column(type="decimal", length=3, scale="2")
     * @Assert\NotBlank
     */
    public $coefficient;

    /**
     * @ORM\Column(type="string",length="10", columnDefinition="ENUM('team', 'individual')")
     */
    public $type;

    /**
     * Set id
     *
     * @param integer
     */
    public function setId($id)
    {
        $this->id = $id;
    }

}